

WindowManager:
    LoginPage:
    RegisterPage:
    UserPage:
    HomePage:
    FeedPage:
    BookPage:

<LoginPage>:
    name: 'login'

    FloatLayout:
        cols: 1

        FloatLayout:
            size: root.width, root.height/2
            cols: 2

            Label:
                text: 'Username: '
                size_hint: 0.8, 0.2
                pos_hint: {"x":-0.1, "top":0.8}
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                id: user
                multiline: False
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.12
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                text: 'Password: '
                size_hint: 0.8, 0.2
                pos_hint: {"x":-0.1, "top":0.8-0.13*2}
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                id: pass
                multiline: False
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.4, 0.12
                font_size: (root.width**2 + root.height**2) / 14**4

            Button:
                pos_hint:{"x":0.3,"y":0.25}
                size_hint: 0.4, 0.1
                font_size: (root.width**2 + root.height**2) / 17**4
                text: "Don't have an account? Register now."
                on_release:
                    app.root.current = 'register'
                    root.manager.transition.direction = 'left'

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.15
            font_size: (root.width**2 + root.height**2) / 14**4
            text: 'Login'
            # make it an if else based on what they put (check list of user
            # or something)
            on_release:
                app.root.current = 'home'
                root.manager.transition.direction = 'left'

<RegisterPage>:
    name: 'register'

    GridLayout:
        cols: 1

        GridLayout:
            cols: 2

            Label:
                text: 'Username: '

            TextInput:
                id: user
                multiline: False

            Label:
                text: 'Password: '

            TextInput:
                id: pass
                multiline: False

            Label:
                text: 'Retype Password: '

            TextInput:
                id: pass2
                multiline: False

            Button:
                text: 'Register'
                # make it an if else based on what they put (check list of user
                # or something)
                on_release:
                    app.root.current = 'home'
        Button:
            text: 'Back to login'
            on_release:
                app.root.current = 'login'
                root.manager.transition.direction = 'right'

<UserPage>:
    name: 'user'

<HomePage>:
    name: 'home'

<FeedPage>:
    name: 'feed'

<BookPage>:
    name: 'book'
