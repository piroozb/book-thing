WindowManager:
    LoginPage:
    RegisterPage:
    UserPage:
    HomePage:
    FeedPage:
    BookPage:

<Pop>:
    Label:
        text: 'Registry failed: username already taken!'
        size_hint: 0.5, 0.2
        pos_hint: {'x':0.2, 'top':1}

<Pop2>:
    Label:
        text: "Registry failed: passwords doesn't match!"
        size_hint: 0.5, 0.2
        pos_hint: {'x':0.2, 'top':1}

<LoginPage>:
    name: 'login'

    user: user
    passw: pass1

    FloatLayout:
        size: root.width, root.height/2

        Label:
            text: 'Username: '
            size_hint: 0.8, 0.2
            pos_hint: {"x":-0.1, "top":0.8}
            font_size: (root.width**2 + root.height**2) / 14**4

        TextInput:
            id: user
            multiline: False
            pos_hint: {"x":0.5, "top":0.8}
            size_hint: 0.4, 0.12
            font_size: (root.width**2 + root.height**2) / 14**4

        Label:
            text: 'Password: '
            size_hint: 0.8, 0.2
            password: True
            pos_hint: {"x":-0.1, "top":0.8-0.13*2}
            font_size: (root.width**2 + root.height**2) / 14**4

        TextInput:
            id: pass1
            multiline: False
            pos_hint: {"x":0.5, "top":0.8-0.13*2}
            size_hint: 0.4, 0.12
            password: True
            font_size: (root.width**2 + root.height**2) / 14**4

        Button:
            pos_hint:{"x":0.3,"y":0.25}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Don't have an account? Register now."
            on_release:
                app.root.current = 'register'
                root.manager.transition.direction = 'left'

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.15
            font_size: (root.width**2 + root.height**2) / 14**4
            text: 'Login'
            # make it an if else based on what they put (check list of user
            # or something)
            on_release:
                app.root.current = 'home'
                root.manager.transition.direction = 'left'

<RegisterPage>:
    name: 'register'

    user: user
    pass1: pass1
    pass2: pass2

    GridLayout:
        cols: 1

        GridLayout:
            cols: 2

            Label:
                text: 'Username: '

            TextInput:
                id: user
                multiline: False

            Label:
                text: 'Password: '

            TextInput:
                id: pass1
                password: True
                multiline: False

            Label:
                text: 'Retype Password: '

            TextInput:
                id: pass2
                password: True
                multiline: False

            Button:
                text: 'Register'
                on_release:
                    val = root.btn_register()
                    app.root.current = 'home' if val else 'register'
                    app.root.current = 'home'
        Button:
            text: 'Back to login'
            on_release:
                app.root.current = 'login'
                root.manager.transition.direction = 'right'

<UserPage>:
    name: 'user'

<HomePage>:
    name: 'home'

    FloatLayout:

        Image:
            source: 'images/HomePage/logo.png'
            pos_hint: {"center_x": 0.5, "top": 1}

        MDTextField:
            size_hint: 0.2, 0.05
            pos_hint: {"center": (0.5, 0.8)}
            hint_text: 'search for a book!'
            mode: 'rectangle'

<FeedPage>:
    name: 'feed'

<BookPage>:
    name: 'book'
